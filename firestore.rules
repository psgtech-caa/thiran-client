rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isPSGEmail() {
      return request.auth.token.email.matches('.*@psgtech[.]ac[.]in$');
    }
    
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    match /registrations/{registrationId} {
      allow read: if isAuthenticated() && isPSGEmail();
      
      // Self-registration: userId must match auth UID
      // Admin-added registration: userId starts with 'manual_'
      allow create: if isAuthenticated() 
                      && isPSGEmail()
                      && request.resource.data.keys().hasAll(['userId', 'eventId', 'eventName', 'userName', 'userEmail', 'userRoll', 'userMobile', 'department', 'year', 'registeredAt'])
                      && (request.auth.uid == request.resource.data.userId 
                          || request.resource.data.userId.matches('^manual_.*'));
      
      // Allow updates for authenticated PSG users (coordinators manage attendance)
      allow update: if isAuthenticated() && isPSGEmail();
      
      // Allow deletes for authenticated PSG users (coordinators remove registrations)
      allow delete: if isAuthenticated() && isPSGEmail();
    }

    // Role assignments collection (admin-managed)
    match /roles/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isPSGEmail();
    }
  }
}
